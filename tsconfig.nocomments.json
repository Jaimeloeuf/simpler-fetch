{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // This tsconfig extends the original config and just transpiles for JS files without comments
    "removeComments": true,

    // Skip both the declaration and declaration map to just generate the source code without comments
    // https://github.com/microsoft/TypeScript/issues/14619#issuecomment-784973548
    "declaration": false,
    "declarationMap": false
  }
}
